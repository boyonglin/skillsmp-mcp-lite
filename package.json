{
  "name": "skillsmp-mcp-lite",
  "version": "2.2.0",
  "description": "Lightweight MCP server for searching AI skills from SkillsMP before starting any task",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "skillsmp-mcp-lite": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "scanner-api": "uvx --from cisco-ai-skill-scanner skill-scanner-api --port 8000",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "skills",
    "ai",
    "skillsmp",
    "ai-skills",
    "marketplace"
  ],
  "author": "clancylllin <poerevan9@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boyonglin/skillsmp-mcp-lite.git"
  },
  "homepage": "https://github.com/boyonglin/skillsmp-mcp-lite#readme",
  "bugs": {
    "url": "https://github.com/boyonglin/skillsmp-mcp-lite/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0"
  }
}
